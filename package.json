{
  "name": "dob-link",
  "version": "1.0.0",
  "description": "DOB Link - Web3 on-ramp widget platform",
  "private": true,
  "workspaces": [
    "dob-link-dashboard",
    "dob-link-widget",
    "dob-link-shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:dashboard\" \"npm run dev:widget\"",
    "dev:dashboard": "cd dob-link-dashboard && npm run dev",
    "dev:widget": "cd dob-link-widget && npm run dev",
    "build": "npm run build:dashboard && npm run build:widget",
    "build:dashboard": "cd dob-link-dashboard && npm run build",
    "build:widget": "cd dob-link-widget && npm run build",
    "install:all": "npm install && cd dob-link-dashboard && npm install && cd ../dob-link-widget && npm install",
    "clean": "rm -rf node_modules dob-link-dashboard/node_modules dob-link-widget/node_modules",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/blessedux/dob_link.git"
  },
  "keywords": [
    "web3",
    "widget",
    "on-ramp",
    "tokens",
    "blockchain"
  ],
  "author": "DOB Protocol",
  "license": "MIT"
} 